<?xml version="1.0" encoding="utf-8"?>
<style xmlns="http://purl.org/net/xbiblio/csl" version="1.0"
  class="in-text" default-locale="en-US" demote-non-dropping-particle="sort-only">
  <info>
    <title>Vancouver — in‑text separate square brackets; 3 authors then et al. (validated)</title>
    <id>http://www.zotero.org/styles/vancouver-intext-separate-square-brackets-etal3-validated</id>
    <link href="http://www.zotero.org/styles/vancouver-intext-separate-square-brackets-etal3-validated" rel="self"/>
    <link href="http://www.zotero.org/styles/vancouver" rel="template"/>
    <author>
      <name>Modified by ChatGPT</name>
    </author>
    <category citation-format="numeric"/>
    <category field="medicine"/>
    <updated>2025-09-26T04:15:40.113332Z</updated>
    <summary>In-text [n],[m] sorted; bibliography limited to 3 authors then et al. (et al. set at bibliography level).</summary>
    <rights license="http://creativecommons.org/licenses/by-sa/3.0/">This style is licensed under a Creative Commons Attribution-ShareAlike 3.0 License</rights>
  </info>

  <!-- IN‑TEXT CITATION -->
  <citation>
    <sort>
      <key variable="citation-number"/>
    </sort>
    <layout delimiter="],[" prefix="[" suffix="]">
      <text variable="citation-number"/>
    </layout>
  </citation>

  <!-- ====== BIBLIOGRAPHY MACROS ====== -->
  <macro name="author">
    <names variable="author">
      <name name-as-sort-order="all" and="text" initialize-with="." delimiter=", " sort-separator=" "/>
      <label form="short" prefix=", "/>
      <substitute>
        <names variable="editor">
          <name and="text" initialize-with="." delimiter=", " />
          <label form="short" prefix=", " />
        </names>
        <text variable="container-title"/>
      </substitute>
    </names>
  </macro>

  <macro name="year">
    <date variable="issued">
      <date-part name="year"/>
    </date>
  </macro>

  <macro name="title">
    <text variable="title"/>
  </macro>

  <macro name="journal-locators">
    <group delimiter=". ">
      <text variable="container-title" form="short" strip-periods="true"/>
      <group>
        <text macro="year"/>
        <text variable="volume" prefix=";"/>
        <text variable="issue" prefix="(" suffix=")"/>
        <text variable="page" prefix=":"/>
      </group>
    </group>
  </macro>

  <macro name="publisher">
    <group delimiter=": ">
      <text variable="publisher-place"/>
      <text variable="publisher"/>
    </group>
  </macro>

  <macro name="in-editors">
    <group delimiter=" ">
      <text term="in" text-case="capitalize-first" suffix=":"/>
      <names variable="editor">
        <name and="text" initialize-with="." delimiter=", "/>
        <label form="short" prefix=", "/>
      </names>
    </group>
  </macro>

  <macro name="edition">
    <choose>
      <if is-numeric="edition">
        <number variable="edition" form="ordinal" suffix=" ed."/>
      </if>
      <else>
        <text variable="edition" suffix="."/>
      </else>
    </choose>
  </macro>

  <macro name="access">
    <choose>
      <if variable="URL DOI" match="any">
        <group delimiter=" ">
          <choose>
            <if variable="DOI">
              <text value="doi" suffix=": "/>
              <text variable="DOI"/>
            </if>
            <else>
              <text term="available at" text-case="capitalize-first" suffix=": "/>
              <text variable="URL"/>
            </else>
          </choose>
          <choose>
            <if variable="accessed">
              <text term="accessed" text-case="capitalize-first" suffix=" "/>
              <date variable="accessed" form="text"/>
            </if>
          </choose>
        </group>
      </if>
    </choose>
  </macro>

  <macro name="pages-generic">
    <choose>
      <if variable="page">
        <text variable="page" prefix=" p. "/>
      </if>
    </choose>
  </macro>

  <macro name="locators-by-type">
    <choose>
      <if type="article-journal article-magazine article-newspaper" match="any">
        <text macro="journal-locators"/>
      </if>
      <else-if type="chapter paper-conference" match="any">
        <group delimiter=". ">
          <text macro="in-editors"/>
          <text variable="container-title"/>
          <text macro="edition"/>
          <text macro="publisher"/>
          <text macro="year"/>
          <text macro="pages-generic"/>
        </group>
      </else-if>
      <else-if type="book" match="any">
        <group delimiter=". ">
          <text macro="edition"/>
          <text macro="publisher"/>
          <text macro="year"/>
        </group>
      </else-if>
      <else-if type="thesis report" match="any">
        <group delimiter=". ">
          <text variable="genre"/>
          <text variable="number"/>
          <text macro="publisher"/>
          <text macro="year"/>
          <text macro="pages-generic"/>
        </group>
      </else-if>
      <else-if type="webpage post post-weblog" match="any">
        <group delimiter=". ">
          <text variable="container-title"/>
          <text macro="year"/>
          <text macro="access"/>
        </group>
      </else-if>
      <else>
        <group delimiter=". ">
          <text macro="publisher"/>
          <text macro="year"/>
          <text macro="pages-generic"/>
        </group>
      </else>
    </choose>
  </macro>

  <!-- Bibliography: set global et al = 3 -->
  <bibliography et-al-min="4" et-al-use-first="3">
    <sort>
      <key variable="citation-number"/>
    </sort>
    <layout>
      <text variable="citation-number" suffix=". "/>
      <group delimiter=". ">
        <text macro="author"/>
        <text macro="title"/>
        <text macro="locators-by-type"/>
        <text macro="access"/>
      </group>
    </layout>
  </bibliography>
</style>
