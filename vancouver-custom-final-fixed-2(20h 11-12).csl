<?xml version="1.0" encoding="utf-8"?>
<style xmlns="http://purl.org/net/xbiblio/csl" version="1.0"
    class="in-text" default-locale="en-US" demote-non-dropping-particle="sort-only">

  <info>
    <title>Vancouver Custom - year after author, title quoted, books/theses italic</title>
    <id>http://www.zotero.org/styles/vancouver-custom-final</id>
    <link href="http://www.zotero.org/styles/vancouver-custom-final" rel="self"/>
    <link href="http://www.zotero.org/styles/vancouver" rel="template"/>
    <author><name>Modified by ChatGPT</name></author>
    <category citation-format="numeric"/>
    <category field="medicine"/>
    <summary>Custom Vancouver: author (year), "title", books &amp; theses italic, edition after book title, comma separators.</summary>
    <updated>2025-01-01T00:00:00Z</updated>
  </info>

  <!-- ======================= -->
  <!-- In-text citation format -->
  <!-- ======================= -->
  <citation>
    <sort>
      <key variable="citation-number"/>
    </sort>
    <layout delimiter="],[" prefix="[" suffix="]">
      <text variable="citation-number"/>
    </layout>
  </citation>

  <!-- ============ -->
  <!-- Author macro -->
  <!-- ============ -->
  <macro name="author">
    <names variable="author">
      <name name-as-sort-order="all" initialize-with="." and="text" delimiter=", " />
      <substitute>
        <text variable="title"/>
      </substitute>
    </names>
  </macro>

  <!-- ============ -->
  <!-- Year (YYYY) -->
  <!-- ============ -->
  <macro name="year-paren">
    <date variable="issued">
      <date-part name="year" prefix="(" suffix=")"/>
    </date>
  </macro>

  <!-- ======================= -->
  <!-- Quoted article/chapter title -->
  <!-- ======================= -->
  <macro name="title-quoted">
    <text variable="title" prefix="&quot;" suffix="&quot;"/>
  </macro>

  <!-- ======================= -->
  <!-- Italic thesis/book title -->
  <!-- ======================= -->
  <macro name="title-italic">
    <text variable="title" font-style="italic"/>
  </macro>

  <!-- ======================= -->
  <!-- Edition -->
  <!-- ======================= -->
  <macro name="edition">
    <choose>
      <if is-numeric="edition">
        <number variable="edition" form="ordinal" suffix=" ed."/>
      </if>
      <else>
        <text variable="edition"/>
      </else>
    </choose>
  </macro>

  <!-- ======================= -->
  <!-- Pages -->
  <!-- ======================= -->
  <macro name="pages">
    <choose>
      <if variable="page">
        <text variable="page"/>
      </if>
    </choose>
  </macro>

  <!-- ======================= -->
  <!-- Journal formatting -->
  <!-- ======================= -->
  <macro name="journal">
    <group delimiter=", ">
      <text variable="container-title" font-style="italic"/>
      <group>
        <text variable="volume"/>
        <text variable="issue" prefix="(" suffix=")"/>
      </group>
      <text macro="pages"/>
    </group>
  </macro>

  <!-- ======================= -->
  <!-- Book formatting -->
  <!-- ======================= -->
  <macro name="book">
    <group delimiter=", ">
      <text macro="title-italic"/>
      <text macro="edition"/>
      <text variable="publisher"/>
      <text variable="publisher-place"/>
    </group>
  </macro>

  <!-- ======================= -->
  <!-- Chapter formatting -->
  <!-- ======================= -->
  <macro name="chapter">
    <group delimiter=", ">
      <text macro="title-quoted"/>
      <group delimiter=" ">
        <text value="In:"/>
        <names variable="editor">
          <name initialize-with="." delimiter=", "/>
        </names>
      </group>
      <text variable="container-title" font-style="italic"/>
      <text macro="edition"/>
      <text variable="publisher"/>
      <text variable="publisher-place"/>
      <text macro="pages"/>
    </group>
  </macro>

  <!-- ======================= -->
  <!-- Thesis formatting -->
  <!-- ======================= -->
  <macro name="thesis">
    <group delimiter=", ">
      <text macro="title-italic"/>
      <text variable="publisher"/>
      <text variable="publisher-place"/>
      <text macro="pages"/>
    </group>
  </macro>

  <!-- ======================= -->
  <!-- Web formatting -->
  <!-- ======================= -->
  <macro name="web">
    <group delimiter=", ">
      <text macro="title-quoted"/>
      <text value="[online]"/>
      <group delimiter=" ">
        <text value="Available at:"/>
        <text variable="URL"/>
      </group>
      <group>
        <text value="[Accessed "/>
        <date variable="accessed">
          <date-part name="day" suffix=" "/>
          <date-part name="month" form="long" suffix=" "/>
          <date-part name="year"/>
        </date>
        <text value="]"/>
      </group>
    </group>
  </macro>

  <!-- ======================= -->
  <!-- Locators Dispatch -->
  <!-- ======================= -->
  <macro name="locators">
    <choose>
      <if type="article-journal">
        <text macro="journal"/>
      </if>
      <else-if type="chapter paper-conference">
        <text macro="chapter"/>
      </else-if>
      <else-if type="book">
        <text macro="book"/>
      </else-if>
      <else-if type="thesis report">
        <text macro="thesis"/>
      </else-if>
      <else-if type="webpage post post-weblog">
        <text macro="web"/>
      </else-if>
      <else>
        <text variable="publisher"/>
      </else>
    </choose>
  </macro>

  <!-- ======================= -->
  <!-- Bibliography -->
  <!-- ======================= -->
  <bibliography et-al-min="4" et-al-use-first="3" hanging-indent="true" second-field-align="flush">
    <sort>
      <key variable="citation-number"/>
    </sort>
    <layout>
      <text variable="citation-number" suffix=". "/>
      <group delimiter=", ">
        <text macro="author"/>
        <text macro="year-paren" prefix=" "/>
        <choose>
          <if type="article-journal chapter paper-conference webpage post post-weblog">
            <text macro="title-quoted"/>
          </if>
          <else-if type="book thesis report">
            <text macro="title-italic"/>
          </else-if>
          <else>
            <text macro="title-quoted"/>
          </else>
        </choose>
        <text macro="locators"/>
      </group>
    </layout>
  </bibliography>

</style>
