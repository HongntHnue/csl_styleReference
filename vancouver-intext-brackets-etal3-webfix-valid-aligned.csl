<?xml version="1.0" encoding="utf-8"?>
<style xmlns="http://purl.org/net/xbiblio/csl" version="1.0"
  class="in-text" default-locale="en-US" demote-non-dropping-particle="sort-only">
  <info>
    <title>Vancouver — in-text [n],[m]; webfix valid; aligned numbering</title>
    <id>http://www.zotero.org/styles/vancouver-intext-brackets-etal3-webfix-valid-aligned</id>
    <link href="http://www.zotero.org/styles/vancouver-intext-brackets-etal3-webfix-valid-aligned" rel="self"/>
    <link href="http://www.zotero.org/styles/vancouver" rel="template"/>
    <author>
      <name>Modified by ChatGPT</name>
    </author>
    <category citation-format="numeric"/>
    <category field="medicine"/>
    <updated>2025-09-26T05:27:44.383589Z</updated>
    <summary>Same content as webfix-valid; adds second-field-align="flush" and hanging-indent="true" for numbering & margins.</summary>
    <rights license="http://creativecommons.org/licenses/by-sa/3.0/">This style is licensed under a Creative Commons Attribution-ShareAlike 3.0 License</rights>
  </info>

  <!-- IN‑TEXT CITATION (unchanged) -->
  <citation>
    <sort>
      <key variable="citation-number"/>
    </sort>
    <layout delimiter="],[" prefix="[" suffix="]">
      <text variable="citation-number"/>
    </layout>
  </citation>

  <!-- ===== MACROS (same as webfix-valid) ===== -->
  <macro name="author">
    <names variable="author">
      <name name-as-sort-order="all" and="text" initialize-with="." delimiter=", " sort-separator=" "/>
      <label form="short" prefix=", "/>
      <substitute>
        <names variable="editor">
          <name and="text" initialize-with="." delimiter=", "/>
          <label form="short" prefix=", "/>
        </names>
        <text variable="container-title"/>
      </substitute>
    </names>
  </macro>

  <macro name="year">
    <date variable="issued">
      <date-part name="year"/>
    </date>
  </macro>

  <macro name="title">
    <text variable="title"/>
  </macro>

  <!-- Journal info; journal/proceedings italic -->
  <macro name="journal-locators">
    <group delimiter=". ">
      <text variable="container-title" form="short" strip-periods="true" font-style="italic"/>
      <group>
        <text macro="year"/>
        <text variable="volume" prefix=";"/>
        <text variable="issue" prefix="(" suffix=")"/>
        <text variable="page" prefix=":"/>
      </group>
    </group>
  </macro>

  <macro name="publisher">
    <group delimiter=": ">
      <text variable="publisher-place"/>
      <text variable="publisher"/>
    </group>
  </macro>

  <macro name="in-editors">
    <group delimiter=" ">
      <text term="in" text-case="capitalize-first" suffix=":"/>
      <names variable="editor">
        <name and="text" initialize-with="." delimiter=", "/>
        <label form="short" prefix=", "/>
      </names>
    </group>
  </macro>

  <macro name="edition">
    <choose>
      <if is-numeric="edition">
        <number variable="edition" form="ordinal" suffix=" ed."/>
      </if>
      <else>
        <text variable="edition" suffix="."/>
      </else>
    </choose>
  </macro>

  <!-- Generic Access (for non-web types): prefer DOI; else URL + [Accessed ...] -->
  <macro name="access-generic">
    <choose>
      <if type="webpage post post-weblog" match="any">
        <!-- handled separately -->
      </if>
      <else>
        <choose>
          <if variable="DOI">
            <text value="doi" suffix=": "/>
            <text variable="DOI"/>
          </if>
          <else-if variable="URL accessed" match="all">
            <group>
              <text value="Available at:" suffix=" "/>
              <text variable="URL" suffix=" "/>
              <text value="[Accessed "/>
              <date variable="accessed">
                <date-part name="day" form="numeric" suffix=" "/>
                <date-part name="month" form="long" suffix=" "/>
                <date-part name="year"/>
              </date>
              <text value="]"/>
            </group>
          </else-if>
          <else-if variable="URL">
            <group>
              <text value="Available at:" suffix=" "/>
              <text variable="URL"/>
            </group>
          </else-if>
        </choose>
      </else>
    </choose>
  </macro>

  <macro name="pages-generic">
    <choose>
      <if variable="page">
        <text variable="page" prefix=" p. "/>
      </if>
    </choose>
  </macro>

  <macro name="access-online-bracketed">
    <group>
      <text value="[online]" suffix=" "/>
      <text value="Available at:" suffix=" "/>
      <text variable="URL" suffix=" "/>
      <text value="[Accessed "/>
      <date variable="accessed">
        <date-part name="day" form="numeric" suffix=" "/>
        <date-part name="month" form="long" suffix=" "/>
        <date-part name="year"/>
      </date>
      <text value="]" suffix="."/>
    </group>
  </macro>

  <macro name="locators-by-type">
    <choose>
      <if type="article-journal article-magazine article-newspaper" match="any">
        <text macro="journal-locators"/>
      </if>
      <else-if type="chapter paper-conference" match="any">
        <group delimiter=". ">
          <text macro="in-editors"/>
          <text variable="container-title" font-style="italic"/>
          <text macro="edition"/>
          <text macro="publisher"/>
          <text macro="year"/>
          <text macro="pages-generic"/>
        </group>
      </else-if>
      <else-if type="book" match="any">
        <group delimiter=". ">
          <text macro="edition"/>
          <text macro="publisher"/>
          <text macro="year"/>
        </group>
      </else-if>
      <else-if type="thesis report" match="any">
        <group delimiter=". ">
          <text variable="genre"/>
          <text variable="number"/>
          <text macro="publisher"/>
          <text macro="year"/>
          <text macro="pages-generic"/>
        </group>
      </else-if>
      <else-if type="webpage post post-weblog" match="any">
        <text macro="access-online-bracketed"/>
      </else-if>
      <else>
        <group delimiter=". ">
          <text macro="publisher"/>
          <text macro="year"/>
          <text macro="pages-generic"/>
        </group>
      </else>
    </choose>
  </macro>

  <!-- BIBLIOGRAPHY with alignment -->
  <bibliography et-al-min="4" et-al-use-first="3" second-field-align="flush" hanging-indent="true">
    <sort>
      <key variable="citation-number"/>
    </sort>
    <layout>
      <text variable="citation-number" suffix=". "/>
      <group delimiter=". ">
        <text macro="author"/>
        <text macro="title"/>
        <text macro="locators-by-type"/>
        <text macro="access-generic"/>
      </group>
    </layout>
  </bibliography>
</style>
