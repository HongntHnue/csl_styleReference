<?xml version="1.0" encoding="utf-8"?>
<style xmlns="http://purl.org/net/xbiblio/csl" version="1.0"
       class="in-text" default-locale="en-US"
       demote-non-dropping-particle="never">
  <info>
    <title>Vancouver (in-text: separate square brackets)</title>
    <id>http://www.zotero.org/styles/vancouver-intext-brackets-separate</id>
    <link href="http://www.zotero.org/styles/vancouver-intext-brackets-separate" rel="self"/>
    <link href="http://www.zotero.org/styles/vancouver" rel="template"/>
    <author>
      <name>Modified by ChatGPT — in-text only</name>
    </author>
    <category citation-format="numeric"/>
    <category field="medicine"/>
    <updated>2025-09-26T00:00:00+00:00</updated>
    <summary>In-text numeric citations formatted as [1],[2],[3] (sorted ascending, no space). Bibliography remains numeric (1., 2., …).</summary>
  </info>

  <!-- ===== IN‑TEXT CITATION (customized) ===== -->
  <citation>
    <sort>
      <key variable="citation-number"/>
    </sort>
    <!-- Each cite number inside its own brackets, joined by ",", e.g., [19],[25],[41] -->
    <layout delimiter="],[" prefix="[" suffix="]">
      <text variable="citation-number"/>
    </layout>
  </citation>

  <!-- ===== BIBLIOGRAPHY (Vancouver‑like, kept generic so numbering stays 1., 2., …) ===== -->
  <!-- This section aims to mimic Vancouver without changing core content fields.
       If your journal requires highly specific punctuation, continue using the journal's official CSL. -->
  <macro name="author-short">
    <names variable="author">
      <name form="short" and="text" delimiter=", " initialize-with="."/>
      <label form="short" prefix=", "/>
    </names>
  </macro>

  <macro name="author">
    <names variable="author">
      <name name-as-sort-order="all" and="text" sort-separator=" " delimiter=", " initialize-with="."/>
      <label form="short" prefix=", "/>
      <substitute>
        <names variable="editor"/>
        <text variable="container-title"/>
      </substitute>
    </names>
  </macro>

  <macro name="issued">
    <date variable="issued">
      <date-part name="year"/>
    </date>
  </macro>

  <macro name="title">
    <text variable="title"/>
  </macro>

  <macro name="container-journal">
    <group delimiter=". ">
      <text variable="container-title" form="short" strip-periods="true"/>
      <group delimiter="">
        <text macro="issued"/>
        <text variable="volume" prefix=";"/>
        <text variable="issue" prefix="(" suffix=")"/>
        <text variable="page" prefix=":"/>
      </group>
    </group>
  </macro>

  <macro name="publisher">
    <group delimiter=": ">
      <text variable="publisher-place"/>
      <text variable="publisher"/>
    </group>
  </macro>

  <macro name="access">
    <group delimiter=" ">
      <group>
        <text term="available at" text-case="capitalize-first" suffix=": "/>
        <text variable="URL"/>
      </group>
      <group>
        <text term="accessed" text-case="capitalize-first" suffix=" "/>
        <date variable="accessed" form="text"/>
      </group>
    </group>
  </macro>

  <macro name="locators">
    <choose>
      <if type="article-journal article-magazine article-newspaper" match="any">
        <text macro="container-journal"/>
      </if>
      <else-if type="chapter paper-conference" match="any">
        <group delimiter=". ">
          <group delimiter=" ">
            <text term="in" text-case="capitalize-first" suffix=":"/>
            <names variable="editor">
              <name and="text" initialize-with="." delimiter=", "/>
              <label form="short" prefix=", "/>
            </names>
            <text variable="container-title"/>
          </group>
          <text macro="publisher"/>
          <text macro="issued"/>
          <text variable="page" prefix=" p. "/>
        </group>
      </else-if>
      <else-if type="book" match="any">
        <group delimiter=". ">
          <text macro="publisher"/>
          <text macro="issued"/>
        </group>
      </else-if>
      <else-if type="webpage post-weblog post" match="any">
        <group delimiter=". ">
          <text variable="container-title"/>
          <text macro="issued"/>
          <text macro="access"/>
        </group>
      </else-if>
      <else>
        <group delimiter=". ">
          <text macro="issued"/>
          <text variable="page" prefix=" p. "/>
        </group>
      </else>
    </choose>
  </macro>

  <bibliography>
    <sort>
      <key variable="citation-number"/>
    </sort>
    <layout>
      <text variable="citation-number" suffix=". "/>
      <group delimiter=". ">
        <text macro="author"/>
        <text macro="title"/>
        <text macro="locators"/>
      </group>
    </layout>
  </bibliography>
</style>
